<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayoutTopo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTop"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/acima" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutRegiao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRegiao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/abaixo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LayoutLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/esquerda" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutEstado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEstados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/direita" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>